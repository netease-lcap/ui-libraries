{
  "compilerOptions": {
    "target": "ES6",
    "moduleResolution": "Node",
    "module": "ESNext",
    "noImplicitAny": true,
    "allowJs": true,
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "rootDir": "src",
    "sourceMap": false,
    "skipDefaultLibCheck": true,
    "pretty": true,
    "downlevelIteration": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": "."
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
}
